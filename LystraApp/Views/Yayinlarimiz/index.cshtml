@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
    <link rel="stylesheet" href="/css/custom-yayinlarimiz.css" />
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script>
        const swiper = new Swiper('.yayinlarSwiper', {
            loop: true,
            autoplay: {
                delay: 4000,
                disableOnInteraction: false,
            },
            slidesPerView: 3,
            spaceBetween: 24,
            grabCursor: true,
            centeredSlides: true,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            breakpoints: {
                0: {
                    slidesPerView: 1.1,
                },
                600: {
                    slidesPerView: 1.5,
                },
                900: {
                    slidesPerView: 2.2,
                },
                1200: {
                    slidesPerView: 3,
                }
            }
        });

        function openModal(button) {
            const slide = button.closest('.swiper-slide');
            const publicationData = JSON.parse(slide.dataset.publication);
            const modal = document.getElementById('publicationModal');
            document.getElementById('modalImage').src = slide.querySelector('.yayin-gorsel').src;
            document.getElementById('modalTitle').textContent = publicationData.title;
            document.getElementById('modalDescription').textContent = publicationData.description;
            const metaDiv = document.getElementById('modalMeta');
            metaDiv.innerHTML = `
                <div class="meta-item"><strong>Kategori:</strong> ${publicationData.category}</div>
                <div class="meta-item"><strong>Tarih:</strong> ${publicationData.date}</div>
                <div class="meta-item"><strong>Yazarlar:</strong> ${publicationData.authors}</div>
                <div class="meta-item"><strong>Sayfa:</strong> ${publicationData.pages}</div>
                <div class="meta-item"><strong>Dil:</strong> ${publicationData.language}</div>
            `;
            const detailsDiv = document.getElementById('modalDetails');
            let detailsHTML = '<h4>İçindekiler</h4><ul>';
            publicationData.contents.forEach(content => {
                detailsHTML += `<li>${content}</li>`;
            });
            detailsHTML += '</ul>';
            if (publicationData.isbn) {
                detailsHTML += `<h4>Yayın Bilgileri</h4><ul>`;
                detailsHTML += `<li><strong>ISBN:</strong> ${publicationData.isbn}</li>`;
                detailsHTML += `<li><strong>Yayınevi:</strong> ${publicationData.publisher}</li>`;
                detailsHTML += `</ul>`;
            }
            if (publicationData.doi) {
                detailsHTML += `<h4>Akademik Bilgiler</h4><ul>`;
                detailsHTML += `<li><strong>DOI:</strong> ${publicationData.doi}</li>`;
                if (publicationData.issn) {
                    detailsHTML += `<li><strong>ISSN:</strong> ${publicationData.issn}</li>`;
                }
                if (publicationData.journal) {
                    detailsHTML += `<li><strong>Dergi:</strong> ${publicationData.journal}</li>`;
                    detailsHTML += `<li><strong>Cilt/Sayı:</strong> ${publicationData.volume}</li>`;
                }
                detailsHTML += `</ul>`;
            }
            if (publicationData.report_no) {
                detailsHTML += `<h4>Rapor Bilgileri</h4><ul>`;
                detailsHTML += `<li><strong>Rapor No:</strong> ${publicationData.report_no}</li>`;
                detailsHTML += `<li><strong>Kurum:</strong> ${publicationData.institution}</li>`;
                detailsHTML += `</ul>`;
            }
            detailsDiv.innerHTML = detailsHTML;
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        }
        function closeModal() {
            const modal = document.getElementById('publicationModal');
            modal.classList.remove('active');
            document.body.style.overflow = 'auto';
        }
        document.getElementById('publicationModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });
    </script>
}
