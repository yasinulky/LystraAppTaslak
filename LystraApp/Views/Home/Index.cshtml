<!-- Virtual Tour Section -->
<section class="virtual-tour-section" id="virtual-tour">
    <div class="section-dec"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center">
                    <h4>İnteraktif Keşif</h4>
                    <h2>Lystra Sanal Tur</h2>
                    <div class="section-separator">
                        <span></span>
                    </div>
                    <p class="tour-description">
                        Lystra Antik Kenti'ni 3D teknolojisi ile keşfedin. 360 derece interaktif gezinti ile 
                        antik kalıntıları yakından inceleyin ve tarihe yolculuk yapın.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="row">
            <!-- Model Controls Panel -->
           
            
            <!-- Cesium Viewer -->
            <div class="col-lg-12">
                <div class="cesium-viewer-container">
                    <div id="cesiumContainer" class="cesium-viewer"></div>
                    
                    <!-- Loading Overlay -->
                    <div class="loading-overlay active" id="loadingOverlay">
                        <div class="loading-content">
                            <div class="loader-3d">
                                <div class="cube">
                                    <div class="face front"></div>
                                    <div class="face back"></div>
                                    <div class="face right"></div>
                                    <div class="face left"></div>
                                    <div class="face top"></div>
                                    <div class="face bottom"></div>
                                </div>
                            </div>
                            <h4 id="loadingTitle">Sanal Tur Hazırlanıyor...</h4>
                            <p id="loadingText">Model yükleniyor, lütfen bekleyiniz</p>
                            <div class="progress-bar">
                                <div class="progress-fill" id="loadingProgress"></div>
                            </div>
                            <div class="loading-steps" id="loadingSteps">
                                <div class="step active" id="step1">
                                    <i class="fa-solid fa-globe"></i>
                                    <span>Harita yükleniyor</span>
                                </div>
                                <div class="step" id="step2">
                                    <i class="fa-solid fa-cube"></i>
                                    <span>3D motor başlatılıyor</span>
                                </div>
                                <div class="step" id="step3">
                                    <i class="fa-solid fa-landmark"></i>
                                    <span>Modeller hazırlanıyor</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Navigation Help -->
                    <div class="navigation-help" id="navigationHelp">
                        <div class="help-content">
                            <h6><i class="fa-solid fa-mouse"></i> Navigasyon Kontrolleri</h6>
                            <div class="help-items">
                                <div class="help-item">
                                    <span class="help-icon"><i class="fa-solid fa-hand-point-up"></i></span>
                                    <span>Sol tık + sürükle: Döndür</span>
                                </div>
                                <div class="help-item">
                                    <span class="help-icon"><i class="fa-solid fa-hand-scissors"></i></span>
                                    <span>Orta tık + sürükle: Kaydır</span>
                                </div>
                                <div class="help-item">
                                    <span class="help-icon"><i class="fa-solid fa-arrows-up-down"></i></span>
                                    <span>Scroll: Yakınlaştır/Uzaklaştır</span>
                                </div>
                                <div class="help-item">
                                    <span class="help-icon"><i class="fa-solid fa-mobile-screen"></i></span>
                                    <span>Dokunmatik: İki parmak gesture</span>
                                </div>
                            </div>
                            <button class="close-help" id="closeHelp">
                                <i class="fa-solid fa-times"></i>
                            </button>
                        </div>
                    </div>
                    
                    <!-- Fullscreen Button -->
                    <button class="fullscreen-btn" id="fullscreenBtn" data-tooltip="Tam Ekran">
                        <i class="fa-solid fa-expand"></i>
                    </button>
                    
                    <!-- Screenshot Button -->
                    <button class="screenshot-btn" id="screenshotBtn" data-tooltip="Ekran Görüntüsü Al">
                        <i class="fa-solid fa-camera"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Model Information Cards -->
        <div class="row model-info-cards" style="margin-top: 40px;">
            <div class="col-lg-3 col-md-6">
                <div class="info-card" data-model="city">
                    <div class="card-icon">
                        <i class="fa-solid fa-city"></i>
                    </div>
                    <h5>Antik Şehir</h5>
                    <p>Roma dönemine ait şehir planlaması ve yapı kalıntıları</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="info-card" data-model="temple">
                    <div class="card-icon">
                        <i class="fa-solid fa-landmark"></i>
                    </div>
                    <h5>Tapınak Kalıntıları</h5>
                    <p>Roma tanrılarına adanmış tapınak kompleksi</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="info-card" data-model="theater">
                    <div class="card-icon">
                        <i class="fa-solid fa-masks-theater"></i>
                    </div>
                    <h5>Antik Tiyatro</h5>
                    <p>4000 kişilik antik dönem tiyatro kompleksi</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="info-card" data-model="agora">
                    <div class="card-icon">
                        <i class="fa-solid fa-building-columns"></i>
                    </div>
                    <h5>Agora Alanı</h5>
                    <p>Ticaret ve sosyal yaşamın merkezi agora</p>
                </div>
            </div>
        </div>
    </div>
    <div class="content-dec2 fs-wrapper"></div>
</section>
