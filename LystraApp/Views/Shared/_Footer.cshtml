<script>
// Footer sabit konum haritası ve modal büyütme
const lystraCoords = [37.8715, 32.4846];
setTimeout(function() {
    if (document.getElementById('footerMap')) {
        let footerMap = L.map('footerMap', { scrollWheelZoom: false, dragging: false, zoomControl: false, doubleClickZoom: false, boxZoom: false, keyboard: false, tap: false, touchZoom: false }).setView(lystraCoords, 13);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '©️ OpenStreetMap'
        }).addTo(footerMap);
        let footerMarker = L.marker(lystraCoords).addTo(footerMap);
        footerMarker.bindPopup('Lystra Antik Kenti').openPopup();
        // Modal açma
        document.getElementById('footerMap').onclick = function() {
            document.getElementById('footerMapModal').style.display = 'flex';
            setTimeout(function() {
                if (!window.footerMapBigInstance) {
                    window.footerMapBigInstance = L.map('footerMapBig').setView(lystraCoords, 13);
                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        maxZoom: 19,
                        attribution: '©️ OpenStreetMap'
                    }).addTo(window.footerMapBigInstance);
                    let markerLystra = L.marker(lystraCoords).addTo(window.footerMapBigInstance);
                    markerLystra.bindPopup('Lystra Antik Kenti').openPopup();
                } else {
                    window.footerMapBigInstance.invalidateSize();
                    window.footerMapBigInstance.setView(lystraCoords, 13);
                }
                // Kullanıcı konumu
                if (navigator.geolocation) {
                    navigator.geolocation.getCurrentPosition(function(pos) {
                        const userCoords = [pos.coords.latitude, pos.coords.longitude];
                        if (window.footerUserMarker) {
                            window.footerMapBigInstance.removeLayer(window.footerUserMarker);
                        }
                        window.footerUserMarker = L.marker(userCoords, {icon: L.icon({iconUrl: 'https://cdn-icons-png.flaticon.com/512/64/64113.png', iconSize: [32,32], iconAnchor: [16,32]})}).addTo(window.footerMapBigInstance);
                        window.footerUserMarker.bindPopup('Siz').openPopup();
                        window.footerMapBigInstance.fitBounds([lystraCoords, userCoords], {padding: [40,40]});
                    });
                }
            }, 200);
        };
        document.getElementById('closeFooterMapModal').onclick = function() {
            document.getElementById('footerMapModal').style.display = 'none';
        };
        document.getElementById('footerMapModal').onclick = function(e) {
            if (e.target === this) document.getElementById('footerMapModal').style.display = 'none';
        };
    }
}, 500);
</script>